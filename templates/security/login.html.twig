{% extends 'base.html.twig' %}

{% block layout %}{{ parent() }} login{% endblock %}

{% block body %}
    <form method="post" name="login">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {% if error %}
        {% endif %}
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="text" value="{{ email }}" name="email" id="email" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" name="password" id="password" class="form-control" required>
        </div>
        <div class="text-center mt-4 mt-xxl-5">
            <button class="btn btn-danger mb-4 d-block w-100" type="submit">Login</button>
        </div>
    </form>
{% endblock %}
